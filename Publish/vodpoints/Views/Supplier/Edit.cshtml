@model vodpoints.edmx.supplier

<div class="container-fluid">
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="portlet light">
        <!--標題-->
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-rss font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">
                    新增頻道商
                </span>
            </div>
        </div>
        <!--END 標題-->
        @using (Html.BeginForm("Edit", "Supplier", FormMethod.Post))
        {
            <div class="portlet-body form">
            <form role="form">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">頻道商名稱</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Name, new { @class="form-contrl"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">聯絡人</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.ContactPerson, new { @class="form-contrl"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">連絡電話</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Telephone, new { @class="form-contrl"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">Email</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Email, new { @class="form-contrl"})
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">公司地址</label>
                            <div class="col-lg-4">
                                @Html.TextBoxFor(a=>a.Address, new { @class="form-contrl"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-danger">儲存變更</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>


        </div>
        }
    </div>
    <!-- END PAGE CONTENT INNER -->
</div>