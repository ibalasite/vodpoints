<!-- BEGIN PAGE CONTENT INNER -->
<div class="portlet light">
    <!--標題-->
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-rss font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">
                新增頻道商
            </span>
        </div>
    </div>
    <!--END 標題-->
    <div class="portlet-body form">
        @using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            <div class="form-body">
                <div class="form-group">
                    <div class="row">
                        <label class="col-lg-offset-1 col-lg-2 control-label">頻道商名稱</label>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" name="Name">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <label class="col-lg-offset-1 col-lg-2 control-label">聯絡人</label>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" name="ContactPerson">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <label class="col-lg-offset-1 col-lg-2 control-label">連絡電話</label>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" name="Telephone">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <label class="col-lg-offset-1 col-lg-2 control-label">Email</label>
                        <div class="col-lg-2">
                            <input class="form-control" name="Email">
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <label class="col-lg-offset-1 col-lg-2 control-label">公司地址</label>
                        <div class="col-lg-4">
                            <input class="form-control" name="Address">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-offset-3 col-lg-9">
                            <button type="submit" class="btn btn-danger">儲存變更</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- END PAGE CONTENT INNER -->