@model vodpoints.edmx.manager

<div class="container-fluid">
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="portlet light">
        <!--標題-->
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-rss font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">
                    新增管理員
                </span>
            </div>
        </div>
        <!--END 標題-->
        @using (Html.BeginForm("Create", "Manager", FormMethod.Post))
        {
        <div class="portlet-body form">
            <form role="form">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">管理員</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Name, new{@class="form-control"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">登入帳號</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Account, new{@class="form-control"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">Email</label>
                            <div class="col-lg-3">
                                @Html.TextBoxFor(a=>a.Email, new{@class="form-control"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">電話</label>
                            <div class="col-lg-2">
                                @Html.PasswordFor(a=>a.Telephone, new { @class = "form-control"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">密碼</label>
                            <div class="col-lg-2">
                                @Html.PasswordFor(a=>a.Password, new { @class = "form-control", placeholder="Password"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">密碼確認</label>
                            <div class="col-lg-2">
                                @Html.PasswordFor(a=>a.ConfirmPassword, new { @class = "form-control"})
                                @Html.ValidationMessage("ConfirmPassword", "新舊密碼不符", new { @class = "small text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-danger" id="EdgeServerCreate">儲存變更</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>


        </div>
        }
    </div>
    <!-- END PAGE CONTENT INNER -->
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.mask.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/EdgeServer.js")" type="text/javascript"></script>
}