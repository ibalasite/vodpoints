@model vodpoints.edmx.edgeserver

<div class="container-fluid">
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="portlet light">
        <!--標題-->
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-rss font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">
                    修改頻道商
                </span>
            </div>
        </div>
        <!--END 標題-->
        @using (Html.BeginForm("Edit", "EdgeServer", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="portlet-body form">
            <form role="form">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">有線電視</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.CableTVName, new { @class="form-contrl"})
                                @Html.ValidationMessageFor(a=>a.CableTVName)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">Edge Server IP</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.IP, new { @class="form-contrl IP"})
                                @Html.ValidationMessageFor(a=>a.IP)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">登入帳號</label>
                            <div class="col-lg-2">
                                @Html.TextBoxFor(a=>a.Account, new { @class="form-contrl"})
                                @Html.ValidationMessageFor(a=>a.Account)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">密碼</label>
                            <div class="col-lg-2">
                                @Html.PasswordFor(a=>a.Password, new { @class="form-contrl", autocomplete = "off", placeholder="Password", value = Model.Password})
                                @Html.ValidationMessageFor(a=>a.Password)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-offset-1 col-lg-2 control-label">密碼確認</label>
                            <div class="col-lg-2">
                                @Html.PasswordFor(a=>a.ConfirmPassword, new { @class="form-contrl", autocomplete = "off", placeholder="Password", value = Model.Password})
                                @Html.ValidationMessageFor(a => a.ConfirmPassword, "新舊密碼不符", new { @class = "small text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-danger">儲存變更</button>
                                @Html.ActionLink("取消","Index","EdgeServer",null, new { @class="btn btn-primary"})
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        }
    </div>
    <!-- END PAGE CONTENT INNER -->
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.mask.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/EdgeServer.js")" type="text/javascript"></script>
}